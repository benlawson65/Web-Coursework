@model NETboard.Models.AnnouncementWithItsComments



@foreach (var item in Model.AnnouncementsList.Reverse())
{
    <div class="Announcement">
        <div class="title">
            <h2>
                @Html.DisplayFor(modelItem => item.announcementTitle)
            </h2>
        </div>
        <div class="Information">

            <p>
                @Html.DisplayFor(modelItem => item.staffName)
            </p>
            <p>
                @Html.DisplayFor(modelItem => item.announcementContent)
            </p>
            <p>
                @Html.DisplayFor(modelItem => item.announcementTimeStamp)
            </p>
            <p>
                @if (User.IsInRole("canEdit"))
                {
                    @*
                    using (Ajax.BeginForm("AjaxUpdateViews", "Announcements", new { id = item.Id }, new AjaxOptions
                    {
                        InsertionMode = InsertionMode.Replace,
                            HttpMethod = "POST",
                            UpdateTargetId = "announcementsDiv"
                        }))
                        { 
                        *@
                if (item.WhoNotViewed == null)
                {
                    item.WhoNotViewed = new List<string>();
                }
                foreach (var user in item.WhoNotViewed)
                {
                            @Html.DisplayFor(modelItem => user)
                            }

                    }
                    else
                    {
                        var userName = System.Web.HttpContext.Current.User.Identity.Name;

                        for (int counter = 0; counter < item.WhoNotViewed.Count; counter++)
                        {
                            if (item.WhoNotViewed.ElementAt<string>(counter).ToString().Equals(userName))
                            {
                                item.WhoNotViewed.RemoveAt(counter);
                            }

                        }
                    
                }
            </p>
        </div>
        <div class="Button">
            <p>
                @if (User.IsInRole("canEdit"))
                {
                using (Ajax.BeginForm("AjaxDeleteAnnouncement", "Announcements", new { id = item.Id }, new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "POST",
                    UpdateTargetId = "announcementsDiv"
                }))
                {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Delete" class="btn btn-default" />

                }
                }


            </p>
        </div>
        @using (Ajax.BeginForm("AjaxInsertComment", "Announcements", new { id=item.Id }, new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "POST",
                UpdateTargetId = "announcementsDiv"
            }))
            {
                @Html.AntiForgeryToken()

                        <!--Announcement content input box-->
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.CommentModel.commentContent, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CommentModel.commentContent, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CommentModel.commentContent, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            }
        <div class="Comment">
            <p>
                @foreach (var comment in item.listOfComments.Reverse())
                {
                    <h2>
                        @Html.DisplayFor(modelItem => comment.commentContent)
                    </h2>
                <p>
                    @Html.DisplayFor(modelItem => comment.timeStamp)
                </p>
                    <p>
                        @Html.DisplayFor(modelItem => comment.userName)
                    </p>
                    <p>
                        @using (Ajax.BeginForm("AjaxDeleteComment", "Announcements", new { id = comment.Id }, new AjaxOptions
                        {
                            InsertionMode = InsertionMode.Replace,
                            HttpMethod = "POST",
                            UpdateTargetId = "announcementsDiv"
                        }))
                        {
                        @Html.AntiForgeryToken()
                          <input type="submit" value="Delete" class="btn btn-default" />
                        
                        }
                    </p>

                }
            </div>
            <!--call javascript scripts that will place announcements in the div above-->
            <!--Scripts.Render("~/bundles/jqueryval")-->
            @*@Html.Partial("_Comment")  *@
            <!--<div id="addCommentsDiv"></div>-->

            
        </div>



        <!--AT Html.Partial("_Comment")-->

}



